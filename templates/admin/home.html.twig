{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <h1>Authentification :</h1>
        <br>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
               <strong>Username :</strong> <input placeholder="username ..." type="text" required name="_username" class="form-control">
            </div>
            <div class="form-group">
                <strong>Password :</strong> <input placeholder="password ..." type="password" required name="_password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Connexion</button>
            </div>
        </form>
    </div>
{% endblock %}
